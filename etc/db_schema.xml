<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="directory_france_city" resource="default" engine="innodb" comment="Directory City for France">
        <column xsi:type="varchar" name="code" nullable="true" length="10" comment="City INSEE Code"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255" comment="City Name"/>
        <column xsi:type="varchar" name="postcode" nullable="true" length="5" comment="City Postcode"/>
    </table>
</schema>
